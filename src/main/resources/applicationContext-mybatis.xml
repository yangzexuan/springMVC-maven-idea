<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:tx="http://www.springframework.org/schema/mvc"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!-- 我们可以在其中添加我们所需要配置的bean，也可以添加相应的数据库连接和事务处理等等，方便后续拓展
           -->
    <!--使用注解 -->
    <context:annotation-config></context:annotation-config>

    <!-- 配置数据源的位置 -->
    <context:property-placeholder location="classpath:mybatis.properties"/>
    <!--  使用C3P0配置数据源 -->
    <bean id="dataSource"
          class="com.mchange.v2.c3p0.ComboPooledDataSource">

        <property name="driverClass" value="${jdbc.mysql.driver}"/>
        <property name="jdbcUrl" value="${jdbc.mysql.url}"/>
        <property name="user" value="${jdbc.mysql.username}"/>
        <property name="password" value="${jdbc.mysql.password}"/>

    </bean>



    <!-- 配置 SqlSessionFactory  配置mybatis的连接工厂 -->
    <bean id="sqlSessionFactory"
          class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"></property>
        <!--<property name="typeAliasesPackage" value="com.atguigu.mybatis"></property>-->

        <property name="configLocation" value="classpath:mybatis-config.xml"/>

        <!-- 配置 mybatis 的属性 -->
        <!--
        <property name="configurationProperties">
            <props>
                <prop key="mapUnderscoreToCamelCase">true</prop>
            </props>
        </property>
        -->
    </bean>



    <!-- 配置事务管理器: 使用 DataSourceTransactionManager -->
    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"></property>
    </bean>



    <!-- 扫描mybatis的mapper包位置，可以指定关联的连接工厂-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer" >
        <property name="basePackage" value="com.com.dome.mybatis.mock"></property>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory" ></property>

    </bean>


    <bean class="com.com.dome.mybatis.mock.MybatisService"></bean>


</beans>